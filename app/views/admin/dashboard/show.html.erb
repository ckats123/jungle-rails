<div class="container">
  <h1 class="mt-4 mb-4">Admin Dashboard</h1>
  <div class="row">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Product Count</h3>
          <p class="card-text"><%= @products_count %></p>
          <a href="<%= admin_products_path %>" class="btn btn-primary">View Products</a>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title">Category Count</h3>
          <p class="card-text"><%= @categories_count %></p>
          <a href="<%= root_path %>" class="btn btn-primary">View Categories</a>
        </div>
      </div>
    </div>
  </div>
</div>